<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tflitecamerademo.activity.IntroductionActivity">

    <TextView
        android:id="@+id/txt_question_mark"
        fontPath="fonts/Dosis-Bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dip"
        android:text="\?"
        android:textColor="@android:color/black"
        android:textSize="300sp"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:id="@+id/img_pepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_question_mark"
        android:scaleType="fitCenter"
        android:src="@drawable/pepper_placeholder" />

    <ImageView
        android:id="@+id/img_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_warning"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_tick"
        android:layout_width="300dip"
        android:layout_height="300dip"
        android:layout_centerInParent="true"
        android:src="@drawable/green_tick"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:background="@drawable/grey_green_selector"
        android:elevation="10dp"
        android:fontFamily="@font/dosisbold"
        android:padding="20dip"
        android:text="@string/label_what_do_you_see"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/flash_ctn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_reco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/dosisbold"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/btn_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:background="@drawable/grey_green_selector"
        android:elevation="10dp"
        android:fontFamily="@font/dosisbold"
        android:padding="20dip"
        android:text="@string/do_it_again"
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_cross"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="15dip"
        android:src="@drawable/ic_close_cross" />

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="10dip"
        android:src="@drawable/ic_home" />

</RelativeLayout>
